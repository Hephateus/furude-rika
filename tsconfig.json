{
  "compilerOptions": {
    "lib": ["ESNext"],
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ESNext",
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@furude-commands/*": ["Commands/*"],
      "@furude-subs/*": ["Subcommands/*"],
      "@discord-classes/*": ["DiscordClasses/*"],
      "@furude-client/*": ["Client/*"],
      "@furude-io/*": ["IO/*"],
      "@furude-localization/*": ["Localization/*"],
      "@furude-db/*": ["DB/*"],
      "@furude-osu/*": ["Osu!/*"],
      "@furude-json/*": ["JSON/*"],
      "@furude-math/*": ["Math/*"],
      "@furude-utils/*": ["Utils/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "typeAcquisition": { "enable": true }
}
